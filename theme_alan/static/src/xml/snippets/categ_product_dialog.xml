<?xml version="1.0" encoding="UTF-8"?>
<templates>
	<!-- Products of category slider -->
	<t t-name="theme_alan.dialog_categ_product_modal">
        <div>
            <div class="as-edit-popup-header">
                <h1>Single Category Product Snippet</h1>
            </div>
            <div class="as-edit-popup-body">
                <ul class="nav nav-tabs" id="as_cat_edit_popup" role="tablist">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link active" id="as_cat_edit_selection_tab" data-toggle="tab" href="#as_cat_edit_selection" role="tab" aria-controls="as_cat_edit_selection" aria-selected="true">Category &amp; Product Selection</a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" id="as_cat_edit_ui-tab" data-toggle="tab" href="#as_cat_edit_ui" role="tab" aria-controls="as_cat_edit_ui" aria-selected="false">UI Design</a>
                    </li>
                </ul>
                <div class="tab-content" id="as_cat_edit_popupContent">
                    <div class="tab-pane fade show active" id="as_cat_edit_selection" role="tabpanel" aria-labelledby="as_cat_edit_selection_tab">
                        <!-- <div class="col-lg-6">
                            <div class="w-100"/>
                        </div> -->
                        <div>
	                        <button class="as-edit-btn as-edit-btn-gray mb-4" id="add-btn-cat"><i class="fa fa-plus"></i> Add Category</button>
	                        <div class="as-cat-select-list-view as-ui-sortable"/>
                            <div class="as-product-select-list-view as-ui-sortable"/>
	                    </div>
                        <div class="d-none alertMsg alert alert-warning">
                            <span>*Note :- To change category, you have to remove the whole snippet and make new one.</span>
                        </div>
                    </div>
                    <!-- <div class="col-lg-6">
                        <div class="w-100"/>
                    </div> -->
                    <div class="tab-pane fade" id="as_cat_edit_ui" role="tabpanel" aria-labelledby="as_cat_edit_ui-tab">
                        <div class="as-edit-layout-tabs">
                            <div class="row">
                                <div class="col-lg-6">

                                    <div class="as-edit-layout-box">
							            <h6 class="as-edit-sub-label">Select Layout</h6>
							            <div class="as-edit-layout-box-in">
							                <div class="custom-control custom-radio">
							                    <input class="custom-control-input pre_select" type="radio" name="layoutStyle" id="style1" value="style1" checked="checked"/>
							                    <label class="custom-control-label" for="style1">
							                        Layout Style 1
							                    </label>
							                </div>
							                <div class="custom-control custom-radio">
							                    <input class="custom-control-input pre_select" type="radio" name="layoutStyle" id="style2" value="style2" />
							                    <label class="custom-control-label" for="style2">
							                        Layout Style 2
							                    </label>
							                </div>
							                <div class="custom-control custom-radio">
							                    <input class="custom-control-input pre_select" type="radio" name="layoutStyle" id="style3" value="style3" />
							                    <label class="custom-control-label" for="style3">
							                        Layout Style 3
							                    </label>
							                </div>
							                <div class="custom-control custom-radio">
							                    <input class="custom-control-input pre_select" type="radio" name="layoutStyle" id="style4" value="style4" />
							                    <label class="custom-control-label" for="style4">
							                        Layout Style 4
							                    </label>
							                </div>
							                <div class="custom-control custom-radio">
							                    <input class="custom-control-input pre_select" type="radio" name="layoutStyle" id="style5" value="style5" />
							                    <label class="custom-control-label" for="style5">
							                        Layout Style 5
							                    </label>
							                </div>
							            </div>
							        </div>

                                    <!-- Template for slider pagination option -->
                                    <t t-call="theme_alan.slider_pagination_option_template"/>

                                    <!-- Template for slider option -->
                                    <t t-call="theme_alan.slider_options_template"/>

                                    <!-- Template for quick options -->
                                    <t t-call="theme_alan.quick_options_template"/>

                                </div>
                                <div class="col-lg-6">
                                    <div class="as-edit-layout-preview">
                                        <h1 class="dataPreview s1">
                                            <img t-attf-src="theme_alan/static/src/img/snippets/product/as-single-categories-style1.jpg" />
                                        </h1>
                                        <h1 class="dataPreview s2 d-none">
                                            <img t-attf-src="theme_alan/static/src/img/snippets/product/as-single-categories-style2.jpg" />
                                        </h1>
                                        <h1 class="dataPreview s3 d-none">
                                            <img t-attf-src="theme_alan/static/src/img/snippets/product/as-single-categories-style3.jpg" />
                                        </h1>
                                        <h1 class="dataPreview s4 d-none">
                                            <img t-attf-src="theme_alan/static/src/img/snippets/product/as-single-categories-style4.jpg" />
                                        </h1>
                                        <h1 class="dataPreview s5 d-none">
                                            <img t-attf-src="theme_alan/static/src/img/snippets/product/as-single-categories-style5.jpg" />
                                        </h1>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="as-edit-popup-footer">
                <button class="as-edit-btn as-edit-btn-primary as-save-dialog">Save</button>
                <button class="as-edit-btn as-edit-btn-secondary as-close-dialog">Close</button>
            </div>
        </div>
    </t>
</templates>